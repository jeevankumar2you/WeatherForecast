<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top"
            android:fontFamily="sans-serif-light"
            android:text="@string/weather"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_big"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/todo"
            android:src="@drawable/weather" />

        <TextView
            android:id="@+id/textview_currenttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top">

            <TextView
                android:id="@+id/textview_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_big"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_mintemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_temp"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_maxtemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_temp"
                android:layout_marginStart="@dimen/margin_left"
                android:layout_toEndOf="@id/textview_mintemp"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_small"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_pressure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_top"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="@dimen/margin_top">

        <TextView
            android:id="@+id/textview_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/textview_margin_left"
            android:fontFamily="sans-serif-light"
            android:text="@string/sunrise"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/textview_margin_right"
            android:fontFamily="sans-serif-light"
            android:text="@string/sunset"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <ImageView
            android:id="@+id/imageview_sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_sunrise"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_left"
            android:contentDescription="@string/todo"
            android:src="@drawable/sunrise" />

        <ImageView
            android:id="@+id/imageview_sunset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_sunset"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_right"
            android:contentDescription="@string/todo"
            android:src="@drawable/sunset" />

        <TextView
            android:id="@+id/textview_sunrise_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_sunrise"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/textview_margin_left"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_sunset_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_sunset"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/textview_margin_right"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:textSize="@dimen/textview_small"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>